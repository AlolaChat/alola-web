{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "test.ts", "dist"]
}
